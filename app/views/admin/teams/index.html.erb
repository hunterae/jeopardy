<%= table_for @teams, :scope => :admin, :table_html => {:id => "board"} do |table| %>
  <% table.column :edit %>
  <% table.column :name %>
  <% table.column :position do |team| %>
    <% if @teams.index(team) != 0 %>
      <%= link_to "↑", move_up_admin_team_path(team) %>
    <% end %>
    <% if @teams.index(team) != @teams.length - 1 %>
      <%= link_to "↓", move_down_admin_team_path(team) %>
    <% end %>
  <% end %>
<% end %>